{
  "name": "rcc-loader",
  "version": "1.0.0-beta",
  "homepage": "https://www.linkedin.com/in/fernando-ekutsu-mondele-67405484/",
  "author": {
    "name": "Fernando Ekutsu Mondele",
    "email": "vs_fernando@yahoo.fr",
    "url": "https://github.com/fernandoem88"
  },
  "description": "use react hooks in callbacks to take out noisy, useless or repetitive hooks from your components body",
  "license": "MIT",
  "repository": "https://github.com/fernandoem88/rcc-loader",
  "module": "dist/index.modern.js",
  "type": "commonjs",
  "main": "dist/index.js",
  "source": [
    "src/loader/index.js",
    "src/loader/loader-helpers.js",
    "src/rcc/rcc-core.js",
    "src/rcc/rcc-creator.tsx"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build"
  },
  "peerDependencies": {
    "path": ">= 0.12.7",
    "react": ">= 16.0.0",
    "sass": ">= 1.54.3"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^18.6.4",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.7",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "sass": "^1.54.3",
    "typescript": "^3.7.5"
  },
  "keywords": [
    "react",
    "css",
    "components",
    "typescript",
    "css-in-js"
  ],
  "files": [
    "dist"
  ]
}
